    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Backend App",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "args": [
                "backend.core.main:app",
                "--reload"
            ],
            "port": 5678,
            "host": "localhost",
            "jinja": true,
            "justMyCode": true
        },
        {
            "name":"Python: Remote Attach",
            "type":"python",
            "request":"attach",
            "connect":{
                "host":"localhost",
                "port":5678
            },
            "pathMappings":[
                {
                "localRoot":"${workspaceFolder}",
                "remoteRoot":"/app"
                }
            ],
            "justMyCode":true
        }
    ]
}